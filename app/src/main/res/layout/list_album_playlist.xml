<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_album_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/vector_plug"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_album_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/list_album_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white_black"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/ys_display_regular"
            tools:text="Album_title" />

        <TextView
            android:id="@+id/list_album_quantity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/grey"
            android:layout_marginStart="8dp"
            android:textSize="15sp"
            android:fontFamily="@font/ys_display_regular"
            tools:text="Album_quantity" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
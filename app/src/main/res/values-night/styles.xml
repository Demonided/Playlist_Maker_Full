<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleSettingText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="StyleSettingVector">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="TextStyleMainMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextStyleMenu">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ColorEditTextSearch">
        <item name="android:background">@color/light_grey</item>
        <item name="android:hint">@string/search_playlist</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="ImageViewSearch">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/search_playlist</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="btnBack">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MainActivityStyleBlueWindow" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:background">@color/black</item>
    </style>
</resources>